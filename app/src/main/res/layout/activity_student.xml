<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">


    <RelativeLayout
        android:id="@+id/picView"
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/gradient_profile"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_centerHorizontal="true"
                android:id="@+id/card"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:strokeWidth="2dp"
                app:cardCornerRadius="75dp"
                app:strokeColor="@color/purple_700"
                android:layout_margin="8dp">

                <ImageView
                    android:src="@drawable/ic_person_24p"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"

            android:id="@+id/back"
            android:layout_width="200dp"
            android:layout_height="56dp"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            android:shadowColor="@color/purple_700"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            android:text="Liste élèves" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/picView">

        <TextView
            android:id="@+id/infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:text="Infos"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--<LinearLayout
            android:id="@+id/emLay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infos"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:weightSum="20">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/ic_mail" />

            <TextView
                android:layout_weight="17"
                android:id="@+id/email"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Email"
                 />
        </LinearLayout>-->


        <LinearLayout
            android:id="@+id/emLay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infos"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:weightSum="20">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/ic_mail" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:gravity="center_vertical"
                android:text="mail"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emLay2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emLay"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:weightSum="20">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/ic_group" />

            <TextView
                android:id="@+id/groupe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:gravity="center_vertical"
                android:text="Groupe"
                />
        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>